<%- include('common/header') %>
<div class="container post-container">
	<div class="row">
		<div class="col-md-2">
			<a href="/posts?author=<%= user._id %>" class="avatar">
				<img class="avatar-cover" src="/images/<%= user.avatar %>" alt="">
			</a>
		</div>
		<div class="col-md-10 post-wrapper">
			<form role="form" action="/posts/<%= post._id %>/edit" method="post">
				<div class="form-group">
					<label for="post-title">标题<span class="text-danger">*</span></label>
					<input type="text" class="form-control" id="post-title" name="title" value="<%= post.title %>">
				</div>
				<div class="form-group">
					<label for="post-content">内容<span class="text-danger">*</span></label>
					<textarea name="content" class="form-control" id="post-content" rows="10">
						<%= post.content %>
					</textarea>
				</div>
				<button type="submit" class="btn btn-success">提交</button>
			</form>
		</div>
	</div>
</div>
<%- include('common/footer') %>